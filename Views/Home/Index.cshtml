@{
    ViewData["Title"] = "Home Page";

    Random rand = new Random();
    string[] greetings = new[] {"Are we all about to die?", "Do you fear the inevitable end of our planet?", "Nasa's databases are public domain? Bet."};

    string greeting = greetings[rand.Next(0, greetings.Length)];
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3> @greeting </h3>
    <p>No, we are not all about to die, but its always nice to double check right? 
        Click the button below to get information on near earth objects(Neos) straight from Nasa's databases.</p>
    <button>Check to be Safe</button>
</div>
